<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rdr.rodrigocorvera.gamenews.Actividades.InfoPlayerActivity">

    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_gamepad"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/image_container"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_player_container"
            android:layout_width="140dp"
            android:layout_height="140dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/player_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/light_grey"
        android:textSize="30dp"
        android:text="golde"
        />
    <ScrollView
        android:id="@+id/scroll_element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo_section"
        android:background="@color/black"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/light_grey"
            >
            <TextView
                android:id="@+id/player_game_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/light_grey"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="golde"
                />
            <TextView
                android:textColor="@color/white"
                android:background="@color/light_grey"
                android:id="@+id/player_bio_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="golde"
                />

        </LinearLayout>


    </ScrollView>




</LinearLayout>
